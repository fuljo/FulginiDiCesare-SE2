\definecolor{pumlbg}{rgb}{1, 1, 0.81}
\definecolor{pumlacc}{rgb}{0.66,0,0.21}
% Use case sheet
\newtcolorbox{usecase}[1]{%
  breakable, skin=bicolor,%
  fontupper=\sffamily,%
  fonttitle=\bfseries\sffamily, title=Use case #1,%
  colback=pumlbg,%
  colbacklower=white,%
  colframe=pumlacc%
}

%------------------------------------------------
%	Rules (goals, requirements, etc.)
%------------------------------------------------

\newcommand{\DefineRule}[2]{%
  \expandafter\newcommand\csname rule-#1\endcsname{#2}%
}
% Print just the body of the rule
\newcommand{\Rule}[1]{\csname rule-#1\endcsname}
% To be used inside description env.
\newcommand{\RuleItem}[1]{\item[#1] \csname rule-#1\endcsname}